<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      
			<%= @user.name %>, <%= @user.email %><br>
			created: <%= @user.created_at %>, updated: <%= @user.updated_at %><br>
			The current time is : <%= DateTime.now %>
			
    </section>
  </aside>
</div>
